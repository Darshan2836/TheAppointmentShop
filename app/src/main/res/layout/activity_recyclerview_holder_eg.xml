<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.homenav.RecyclerviewHolderEg">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarinholder"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/barbertool"
        android:theme="?attr/actionBarTheme">
    </androidx.appcompat.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbarinholder"
    android:layout_above="@+id/bookappointment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--landscape-->
        <ImageView
            android:id="@+id/shopimg"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:src="@drawable/salon"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/line">
        </ImageView>
        <!--store-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="23dp">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="21dp"
                    android:src="@drawable/store"></ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/shoptext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sregular"
                android:letterSpacing="0.05"
                android:paddingRight="70dp"
                android:text="Royal Gold"
                android:textColor="@color/black"
                android:textSize="22dp"></TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/line">
        </ImageView>
        <!--shop address-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="21dp"
                    android:src="@drawable/navigation"></ImageView>

            </LinearLayout>
            <TextView
                android:id="@+id/addresstext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.01"
                android:paddingRight="20dp"
                android:lineSpacingExtra="7dp"
                android:text="Shop No.18 , Ekata Nagar , sonigara Classic, Nr Trinity School Akurdi Pimpri-Chinchwad, Pune,maharashtra - 411035">
            </TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/line">
        </ImageView>
        <!--phone-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/phone"></ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp">
                <TextView
                    android:id="@+id/numbertext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:paddingRight="20dp"
                    android:lineSpacingExtra="7dp"
                    android:text="+91 7218809141"
                    android:layout_gravity="center">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/line">
        </ImageView>
        <!--clock-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/clock"></ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp">
                <TextView
                    android:id="@+id/timetext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:paddingRight="20dp"
                    android:lineSpacingExtra="7dp"
                    android:text="10:00 AM - 02:00 PM"
                    android:layout_gravity="center">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/line">
        </ImageView>


    </LinearLayout>
</ScrollView>


    <Button
        android:id="@+id/bookappointment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/bookappointments"></Button>
</RelativeLayout>