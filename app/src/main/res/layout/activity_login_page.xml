<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginPage">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sbold"
        android:text="@string/login_not_memeber"
        android:textColor="#000000"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="20dp">
    </TextView>

    <TextView
        android:id="@+id/textViewregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sbold"
        android:text="@string/login_register"
        android:textColor="#FF0000"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="220dp">
    </TextView>

    <EditText
        android:id="@+id/editTextpass"
        android:layout_width="289dp"
        android:layout_height="29dp"
        android:background="@drawable/username"
        android:ems="10"
        android:hint="@string/login_pass_hint"
        android:inputType="textPassword"
        android:paddingStart="25sp"
        android:paddingEnd="25sp"
        android:layout_below="@+id/editTextuser"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp">
    </EditText>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="222dp"
        android:layout_height="52dp"
        android:fontFamily="@font/sbold"
        android:text="@string/login_text"
        android:textColor="#000000"
        android:textSize="36sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp">
    </TextView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="143dp"
        android:layout_height="33dp"
        android:fontFamily="@font/sbold"
        android:text="@string/login_dsmail.com"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@id/textView5"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="220dp">
    </TextView>

    <Button
        android:id="@+id/loginbutton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:background="@drawable/buttong"
        android:fontFamily="@font/sregular"
        android:scrollbarThumbHorizontal="@color/white"
        android:shadowColor="@color/white"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_below="@id/editTextpass"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp">
    </Button>


    <EditText
        android:id="@+id/editTextuser"
        android:layout_width="184dp"
        android:layout_height="29dp"
        android:background="@drawable/username"
        android:ems="10"
        android:hint="@string/login_username_hint"
        android:inputType="textEmailAddress"
        android:paddingStart="25sp"
        android:paddingEnd="25sp"
        android:layout_below="@id/textView5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp">
    </EditText>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/or"
        android:layout_below="@id/loginbutton"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">
    </ImageView>

    <ImageView
        android:id="@+id/googlesignin"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imageView"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light">
    </ImageView>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/copyriight"
        android:textColor="#000000"
        android:textSize="18sp"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">
    </TextView>

</RelativeLayout>