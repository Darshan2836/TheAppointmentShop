<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <!--name-->
                <!--time-->
                <TextView
                    android:id="@+id/upcomingshop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bellerose"
                    android:letterSpacing="0.1"
                    android:text="Royal Gold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/opensansregular"
                        android:text="Scheduled at  :">
                    </TextView>

                    <TextView
                        android:paddingLeft="5dp"
                        android:id="@+id/upcomingtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensansregular"
                        android:text="4:00 PM"
                        android:textSize="12sp"></TextView>
                </LinearLayout>
                <!--date-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/opensansregular"
                        android:text="Scheduled on :">
                    </TextView>

                    <TextView
                        android:paddingLeft="5dp"
                        android:id="@+id/upcomingdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensansregular"
                        android:text="04 December 2020"
                        android:textSize="12sp"></TextView>
                </LinearLayout>
                <!--booking Id-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/opensanssemibold"
                        android:textColor="@color/black"
                        android:text="Booking Id : ">
                    </TextView>

                    <TextView
                        android:paddingLeft="5dp"
                        android:id="@+id/bookingidtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensanssemibold"
                        android:text="1001"
                        android:textSize="12dp"
                        android:textColor="@color/black"></TextView>
                </LinearLayout>
            </LinearLayout>
            <!--image-->
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="95dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/eventvecto"></ImageView>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>