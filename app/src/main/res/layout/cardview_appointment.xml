<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!--name-->
            <TextView
                android:id="@+id/upcomingshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:letterSpacing="0.1"
                android:text="Royal Gold"
                android:textColor="@color/black"
                android:fontFamily="@font/bellerose"
                android:textStyle="bold">
            </TextView>
            <!--time-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensansregular"
                    android:text="Scheduled at  :"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:paddingLeft="5dp"
                    android:id="@+id/upcomingtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:text="4:00 PM"
                    android:textColor="@color/black"
                    android:textSize="14sp"></TextView>
            </LinearLayout>
            <!--date-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensansregular"
                    android:text="Scheduled on :"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:paddingLeft="5dp"
                    android:id="@+id/upcomingdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:text="04 December 2020"
                    android:textColor="@color/black"
                    android:textSize="14sp"></TextView>
            </LinearLayout>
        </LinearLayout>
        <!--image-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/eventvecto"></ImageView>
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>