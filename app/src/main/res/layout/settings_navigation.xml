<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--black box-->
    <ImageView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/blackyrec">
    </ImageView>

    <!--edit profile-->
    <ImageView
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/editprofile">
    </ImageView>

    <!--invite friends-->
    <Button
        android:id="@+id/invitefriends"
        android:layout_width="200dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shareapp">
    </Button>


    <!--other settings-->
    <Button
        android:id="@+id/othersettings"
        android:layout_below="@+id/invitefriends"
        android:layout_width="200dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/wantthisforshop">
    </Button>



    <!--toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/blackbox"
        android:theme="?attr/actionBarTheme">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Settings"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/opensanssemibold">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <!--black box-->
    <ImageView
        android:id="@+id/imageView1"
        android:layout_below="@id/othersettings"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/blackyrec">
    </ImageView>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:orientation="vertical">
        <!--Name-->
        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :   "
                android:textColor="@color/black"
                android:textSize="18dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Darshan Udagire"
                android:textSize="18dp">
            </TextView>
            <Button
                android:layout_marginLeft="150dp"
                android:gravity="center_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_edit">
            </Button>

        </LinearLayout>
        <ImageView
            android:layout_below="@id/linearlayout1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.5"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/blackyrec">
        </ImageView>

        <!--Mobile-->
        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile :   "
                android:textColor="@color/black"
                android:textSize="18dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 7218809141"
                android:textSize="18dp">
            </TextView>

        </LinearLayout>
        <ImageView
            android:layout_below="@id/linearlayout1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.5"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/blackyrec">
        </ImageView>


        <!--Email ID-->
        <LinearLayout
            android:id="@+id/linearlayout3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID :   "
                android:textColor="@color/black"
                android:textSize="18dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="darshanudagire@dsmail.com"
                android:textSize="18dp">
            </TextView>

        </LinearLayout>
        <ImageView
            android:layout_below="@id/linearlayout1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.5"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/blackyrec">
        </ImageView>

        <!--signout-->
        <LinearLayout
            android:id="@+id/linearlayoutsignout"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_signout">
            </ImageView>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textSize="18dp">
            </TextView>
        </LinearLayout>
        <ImageView
            android:layout_below="@id/linearlayout1"
            android:layout_marginLeft="10dp"
            android:alpha="0.5"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/blackyrec">
        </ImageView>


    </LinearLayout>




</RelativeLayout>