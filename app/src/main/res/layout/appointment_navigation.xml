<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/appointmenttool"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/upcomingappointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Appointments"
        android:layout_below="@+id/toolbar2"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/opensanssemibold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclecurrentappointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upcomingappointments">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/previousappointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Appointments"
        android:layout_below="@+id/recyclecurrentappointment"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/opensanssemibold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclepreviousappointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/previousappointments">
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>